// button.styl

// Fancy Corners From http://lea.verou.me/2011/03/beveled-corners-negative-border-radius-with-css3-gradients/
button_back_blue = #dcebf0
button_text_blue = #006495

button_back_orange = #e67129
button_text_orange = #fff

button
	background button_back_blue
	background:
		linear-gradient(135deg, transparent 10px, button_back_blue 0) top left,
		linear-gradient(225deg, transparent 10px, button_back_blue 0) top right,
		linear-gradient(315deg, transparent 10px, button_back_blue 0) bottom right,
		linear-gradient(45deg,  transparent 10px, button_back_blue 0) bottom left
	background-size 50% 50%
	background-repeat no-repeat
	background-image:
		radial-gradient(circle at 0 0, rgba(204,0,0,0) 6px, button_back_blue 7px),
		radial-gradient(circle at 100% 0, rgba(204,0,0,0) 6px, button_back_blue 7px),
		radial-gradient(circle at 100% 100%, rgba(204,0,0,0) 6px, button_back_blue 7px),
		radial-gradient(circle at 0 100%, rgba(204,0,0,0) 6px, button_back_blue 7px)
	border none
	padding 10px 20px
	color button_text_blue
	font-family sans-serif
	text-transform uppercase
	line-height 22px
	font-size 18px
	font-weight 300
	letter-spacing 0.4px

button.orange 
	background button_back_orange
	background:
		linear-gradient(135deg, transparent 10px, button_back_orange 0) top left,
		linear-gradient(225deg, transparent 10px, button_back_orange 0) top right,
		linear-gradient(315deg, transparent 10px, button_back_orange 0) bottom right,
		linear-gradient(45deg,  transparent 10px, button_back_orange 0) bottom left
	background-size 50% 50%
	background-repeat no-repeat
	background-image:
		radial-gradient(circle at 0 0, rgba(204,0,0,0) 6px, button_back_orange 7px),
		radial-gradient(circle at 100% 0, rgba(204,0,0,0) 6px, button_back_orange 7px),
		radial-gradient(circle at 100% 100%, rgba(204,0,0,0) 6px, button_back_orange 7px),
		radial-gradient(circle at 0 100%, rgba(204,0,0,0) 6px, button_back_orange 7px)
	color button_text_orange
	font-weight 500

button
	.text
		position: relative
		top: 2px