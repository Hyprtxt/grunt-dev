// footer.styl

.prefooter
	background #eee
	text-align center
	padding 50px
	h2
		padding-bottom 30px
		max-width 900px
		margin 0 auto

.footer
	background #646263
	padding 20px 30px
	ul
		max-width 970px
		list-style none
		margin 25px auto 10px auto
		padding-bottom 30px
	li
		float left
		border-right 1px solid white
		line-height 12px
		margin-bottom: 10px
	li:last-of-type
		border none
	a
		padding 0 20px
	p
		clear both
		text-align center
	a, p
		color white
		font-family sans-serif
		text-transform uppercase
		font-size 14px
		font-weight 300