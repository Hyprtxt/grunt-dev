@import 'nib'
// @import 'button'

body
	background white
	color #030303
	font-family Cinzel

p
	font-family sans-serif
	font-size 22px
	font-weight 300

img
	max-width 100%

h2
	text-transform uppercase
	font-size 36px

@import 'header'

@import 'hero'

.container
	margin-top 30px
	margin-bottom 90px

.col-sm-6 h3
	margin-top 60px
	font-size 30px

.subhero
	text-align center
	padding-bottom 80px
	p
		max-width 840px
		margin 0 auto

.hr
	border-top 2px solid #ccc
	margin 80px 0 50px 0

@media ( min-width: 1200px )
	.container
		width 970px

@media ( max-width 500px )
	h2
		font-size 28px
	h3
		font-size 24px
	p
		font-size 18px

@import 'footer'