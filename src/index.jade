- var title = 'Reap Chart Maker'
- var description = 'Visualize Google Analytics Queries'
doctype html
html
	include ./jade/header.jade
	body
		include ./jade/nav.jade
		.container.shadow
			.row
				.col-sm-12
					h1=title
					p=description
					hr
				.col-sm-6
					h3 Select A Query
					select#queryOptions
				.col-sm-6
					h3 Choose a Chart Type
					select#chartOptions
						option(value='line') Line
						option(value='bar') Bar
						option(value='pie') Pie
				.col-sm-12
					h3 Da Chart!
					#chartOne.ct-chart
					h3 Returned Data
					pre#theJSON
					br
		include ./jade/footer.jade