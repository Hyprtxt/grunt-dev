//- NOTE: These are optional overrides
//- - var title = 'Reap Table Maker'
//- - var description = 'Visualize Google Analytics Queries'
doctype html
html
	include ./jade/header.jade
	body
		include ./jade/nav.jade
		.container.shadow
			.row
				form(method='GET', action='http://api.yothrow.com/report/create')
					.col-sm-12
						h1=title
						p=description
						hr
					.col-sm-6
						h3 Select A Query
						select#queryOptions(name='query')
					.col-sm-6
						input#chart_type(type='hidden', value='', name='chart_type')
						.form-group
							label Block Name
							input.form-control(type='text', name='name')
						#chartButtons
						br
						.form-group
							label Insight Text
							textarea.form-control#insight(name='insight') This is a bit of text that will show up with the block
						.checkbox
							label
								input#chart(type='checkbox', checked, name='chart')
								| Include a Chart
						.checkbox
							label
								input#table(type='checkbox', checked, name='table')
								| Include a Table
					.col-sm-12
						h3 Your Block/Insight
					.col-sm-12#theChart
					.col-sm-12#tableHolder
					.col-sm-12
						br
						button.btn.btn-default#save Save This Block
				//- .col-sm-12
					h3 Returned Data
					pre#theJSON
					br
		include ./jade/footer.jade